-- Button Creator
local function createButton(name, status)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.9, 0, 0, 40)
    btn.BackgroundColor3 = Color3.fromRGB(60, 180, 60)
    btn.BorderSizePixel = 0
    btn.Text = ""
    btn.ClipsDescendants = true
    btn.AutoButtonColor = status == nil
    btn.Parent = selectFrame

    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = name
    label.Font = Enum.Font.FredokaOne
    label.TextSize = 18
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextStrokeTransparency = 1
    label.Parent = btn

    if status then
        local overlay = Instance.new("TextLabel")
        overlay.Size = UDim2.new(1, 0, 1, 0)
        overlay.BackgroundTransparency = 1
        overlay.Text = (status == "fixing") and "Currently Fixing" or "Patched"
        overlay.Font = Enum.Font.FredokaOne
        overlay.TextSize = 18
        overlay.TextColor3 = (status == "fixing") and Color3.fromRGB(255, 255, 0) or Color3.fromRGB(255, 100, 100)
        overlay.TextStrokeTransparency = 1
        overlay.Visible = false
        overlay.ZIndex = 2
        overlay.Parent = btn

        btn.MouseEnter:Connect(function()
            label.Visible = false
            overlay.Visible = true
            btn.BackgroundColor3 = Color3.fromRGB(120, 120, 120)
        end)
        btn.MouseLeave:Connect(function()
            label.Visible = true
            overlay.Visible = false
            btn.BackgroundColor3 = Color3.fromRGB(60, 180, 60)
        end)
    else
        btn.MouseButton1Click:Connect(function()
            title.Visible = false
            subtitle.Visible = false
            selectFrame:Destroy()
            createCartoonLoadingBar(10, "Loading, please wait...")
        end)
    end
end

-- Add buttons
createButton("Server Hop (Old Server)", nil) -- active
createButton("Pet and Fruit Dupe (Beta)", "fixing") -- show "Currently Fixing"
createButton("Spawn Seed and Egg", "patched") -- show "Patched"
createButton("Egg Detector / Reroll (Unpatched)", nil) -- active
